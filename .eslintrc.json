{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "amd":true,
        "jasmine":true
    },
    "extends": [      
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "@typescript-eslint/no-var-requires": "off"      
    }
}
